{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@client/*": ["src/components/client/*"],
      "@server/*": ["src/components/server/*"],
      "@schemas/*": ["src/schemas/*"],
      "@layouts/*": ["src/layouts/*"],
      "@stores/*": ["src/stores/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}

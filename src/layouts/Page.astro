---
import AppFooter from '@server/AppFooter.astro';
import BottomBar from '@server/BottomBar.astro';
import AppBar from 'src/components/server/AppBar.astro';
import AppRail from 'src/components/server/AppRail.astro';
import BasePostscripts from 'src/components/server/BasePostscripts.astro';
import BaseHead from '../components/server/BaseHead/BaseHead.astro';
import BaseTail from '../components/server/BaseTail.astro';

type Props = {
  title?: string;
  description?: string;
  image?: string;
};

const { title, description, image } = Astro.props;
---

<html lang="fi">
  <BaseHead title={title} description={description} image={image}/>
  <body>
    <AppBar title={title}>
      <slot name="app-bar" />
    </AppBar>
    <AppRail />
    <BottomBar />
	  <main>
      <slot />
      <AppFooter />
    </main>
    <nav id="fab-tray">
      <slot name="fab-tray"></slot>
    </nav>
    <BasePostscripts />
    <BaseTail />
  </body>
</html>

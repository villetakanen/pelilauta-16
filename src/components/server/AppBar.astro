---
interface Props {
  title?: string;
  tray?: boolean;
  menu?: boolean;
}

const { title, tray } = Astro.props;
const barTitle = title || 'Pelilauta 2';
---

<header class="cn-app-bar">
  {tray ? <cn-tray-button /> : ''}
  <div class="titleContainer"><h3>{barTitle}</h3></div>
  <div style="flex: 1"></div>
  <slot />
  <cn-lightmode-button class="hide-sm"></cn-lightmode-button>
  <cn-share-button></cn-share-button>
</header>

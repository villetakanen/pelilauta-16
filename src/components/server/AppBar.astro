---
import { t } from '@utils/i18n';

interface Props {
  title?: string;
  modal?: boolean;
  sticky?: boolean;
  noun?: string;
}

const { title, modal, noun, sticky } = Astro.props;
const barTitle = title || t('app:meta.title');
const mode = modal ? 'modal' : sticky ? 'sticky' : undefined;
---

<cn-app-bar title={barTitle} mode={mode} noun={noun}>
  <slot />
  <cn-share-button></cn-share-button>
</cn-app-bar>

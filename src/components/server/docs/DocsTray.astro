---
import { getCollection } from 'astro:content';
import { t } from '@utils/i18n';

const allComponents = await getCollection('fi');
---

<h3 class="cn-tray-title">{t('app:docs.title')}</h3>
<ul>
  {
    allComponents.map(p => (
      <li>
        <a href={'/docs/fi/' + p.slug}>
          {p.data.noun && <cn-icon noun={p.data.noun} small></cn-icon>}
          {p.data.name}</a>
      </li>
    ))
  }
</ul>
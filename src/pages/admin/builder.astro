---
import PageWithTray from '@layouts/PageWithTray.astro';
import AdminTray from '@svelte/admin/AdminTray.svelte';
import BuilderEditor from '@svelte/builder/BuilderEditor.svelte';

const visible = import.meta.env.SECRET_FEATURE_FLAG_Admin_tools === 'true';
---
<PageWithTray title="Characters: Character Builder Editor" description="Edit character builders in the Character Builder Editor.">
  <AdminTray client:only="svelte" slot="app-tray" showLocalTools={visible} /> 
  <BuilderEditor client:only="svelte" />
</PageWithTray>

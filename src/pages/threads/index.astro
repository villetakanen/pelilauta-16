---
import { ForumFabs } from '@client/ThreadsApp/ForumFabs';
import { ForumPage } from '@client/threads/ForumPage';
import Page from '@layouts/Page.astro';
import { t } from '@utils/i18n';

const title = `${t('app:shortname')} - ${t('threads:forum.title')}`;
const description = t('threads:forum.description');
---
<Page title={title} description={description}>
  <ForumPage client:only="solid-js"/>
  <ForumFabs client:only="solid-js"/>
</Page>
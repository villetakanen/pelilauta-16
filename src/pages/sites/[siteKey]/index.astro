---
import { PageArticle } from '@client/sites/PageArtivle';
import { SiteTray } from '@client/sites/SiteApp/SiiteTray';
import { SitePoster } from '@client/sites/SitePoster';
import { SiteSettingsButton } from '@client/sites/SiteSettingsButton';
import PageWithTray from 'src/layouts/PageWithTray.astro';

const { siteKey } = Astro.params;
---
<PageWithTray>
  <div slot="app-bar">
    <SiteSettingsButton client:only="solid-js"/>
  </div>
  <SiteTray slot="app-tray" sitekey={siteKey + ''} client:only="solid-js"/>
      <div class="content-columns">
        <div class="full-width">
          <SitePoster site={siteKey + ''} client:only="solid-js"/>
        </div>
        <div class="column-l">
          <PageArticle client:only="solid-js" page={siteKey + ''} />
        </div>
      </div>
</PageWithTray>
